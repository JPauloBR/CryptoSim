<main class="container">
    <h2>Crypto$im Market</h2>
    </div>
    <section class="row text-center placeholders">
        <div class="col-9 col-sm-9 placeholder">
            <h4 class="text-left">Profit / Loss</h4>
            <div class="table-responsive">
                <table id="market-table" class="table table-striped table-sm text-left">
                    <thead>
                        <tr>
                            <th>Currency Name</th>
                            <th>Symbol</th>
                            <th>Market Cap (24h)</th>
                            <th>Price</th>
                            <th>Volume (24h)</th>
                            <th>Change (24h)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="market-table-body">
                        <!-- table data inserted through jquery  -->
                </table>
            </div>
        </div>
        <div class="col-3 col-sm-3">
            <div class="card">
                <div class="header">
                    <h4 class="title">You Have</h4>
                    <div id="usd-only" class="big-number">Loading...</div>
                </div>
                <div class="stats">
                    <p>remaining to invest</p>
                </div>
            </div>
            <div class="card">
                <div class="header">
                    <h4 class="title">BTC (24H)</h4>
                    <img src="assets/images/btc_graph.png" width="100%">
                </div>
            </div>
            <div class="card">
                <div class="header">
                    <h4 class="title">ETH (24H)</h4>
                    <img src="assets/images/btc_graph.png" width="100%">
                </div>
            </div>
        </div>
        </div>
</main>

<!-- Buy Confirmation Modal -->
<div class="modal fade" id="modal-buy-confirm" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content text-center">
            <h3>Purchase Confirmed</h3>
            <i class="fa fa-check fa-4x text-success"></i>
        </div>
    </div>
</div>

<!-- Buy Failure Modal -->
<div class="modal fade" id="modal-buy-fail" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content text-center">
            <h3>Purchase Failed</h3>
            <i class="fa fa-times fa-4x text-danger"></i>
            <p> You don't have enough USD for that order</p>
        </div>
    </div>
</div>

<!-- Full Height Modal Right -->
<div class="modal fade right" id="modal-buy" tabindex="-1" role="dialog" aria-labelledby="Buy Modal" aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog modal-full-height modal-right" role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header">
                <p class="heading lead">Purchase Currency</p>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="white-text">&times;</span>
                    <p></p>
                </button>
            </div>
            <!--Body-->
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="buy-coinID">Currency</label>
                        <input type="text" readonly class="form-control" id="buy-coinID" value="ERROR" >
                    </div>
                    <div class="form-group">
                        <label for="buy-ccPrice">Current Price (USD)</label>
                        <input type="text" readonly class="form-control" id="buy-ccPrice" value="0" >
                    </div>
                    <div class="form-group">
                        <label for="buy-ccQuantity">Quantity to Purchase</label>
                        <input type="text" class="form-control" id="buy-ccQuantity" value="0" name="ccQuantity">
                    </div>
                    <div class="form-group">
                        <label for="buy-USDValue">Purchase Price (USD)</label>
                        <input type="text" class="form-control" id="buy-USDValue" value="0">
                    </div>
                    <!-- pass the user ID -->
                    <div class="form-group">
                        <input type="hidden" class="form-control" id="buy-userID" value="1">
                    </div>
                    <div class="modal-footer justify-content-center">
                        <button type="button" class="btn-fill btn-wd btn btn-primary" id="confirm-buy-order">Confirm Order <i class="fa fa-dollar ml-1"></i></button>
                    </div>
                </form>
                <!--Footer-->
            </div>
            <!--/.Content-->
        </div>
    </div>
</div>
<!-- END Full Height Modal Right -->